<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hijau2"
    tools:context=".LaporanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title for the report -->
        <TextView
            android:id="@+id/tvLaporanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:text="LAPORAN TRANSAKSI"
            android:textAlignment="center"
            android:textColor="@color/hijau1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <!-- DatePicker for selecting the date -->
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"/> <!-- Center horizontally -->

        <!-- TextView for displaying the report -->
        <TextView
            android:id="@+id/tvLaporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Transaksi"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/inter_medium"
            android:paddingTop="16dp"
            android:textColor="@color/hijau1"/>
    </LinearLayout>
</ScrollView>
